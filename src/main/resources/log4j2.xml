<?xml version="1.0" encoding="UTF-8"?>
<Configuration name="EventFinder">
    <Appenders>

        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout
                    pattern="%highlight{%d{HH:mm:ss.SSS} [%t] | %-10marker | %-5level: %c{1} [%line] - %msg%n%throwable}{FATAL=white, ERROR=red, WARN=yellow, INFO=black, DEBUG=green, TRACE=blue}"
                    disableAnsi="false"/>
        </Console>

        <File name="File" fileName="logs/Hibernate.log">
            <PatternLayout
                    pattern="%d{HH:mm:ss.SSS} [%t] | %-10marker | %-5level: %c{1} [%line] - %msg%n%throwable"/>
        </File>

        <RollingFile name="RollingFileAppender" fileName="logs/App.log"
                     filePattern="logs/$${date:yyyy-MM}/app-%d{MM-dd-yyyy}-%i.log.gz">
            <PatternLayout
                    pattern="%d{HH:mm:ss.SSS} [%t] | %-10marker | %-5level: %c{1} [%line] - %msg%n%throwable"/>
            <Policies>
                <OnStartupTriggeringPolicy/>
                <TimeBasedTriggeringPolicy/>
                <SizeBasedTriggeringPolicy size="10 MB"/>
            </Policies>
            <DefaultRolloverStrategy max="20"/>

        </RollingFile>

    </Appenders>

    <Loggers>
        <Logger name="org.hibernate" level="info" additivity="false">
            <AppenderRef ref="Console"/>
        </Logger>
        <Logger name="org.hibernate.SQL" level="debug" additivity="false">
            <AppenderRef ref="File"/>
        </Logger>
        <Logger name="org.hibernate.type.descriptor.sql" level="trace" additivity="false">
            <AppenderRef ref="RollingFileAppender"/>
        </Logger>

        <Root level="All">
            <AppenderRef ref="Console" level="trace"/>
            <AppenderRef ref="File"/>
            <AppenderRef ref="RollingFileAppender"/>
        </Root>
    </Loggers>
</Configuration>